<%- include header %>
<nav class="navbar navbar-light bg-light">
    <a href="/"><span class="navbar-brand mb-0 h1"><%- title %></span></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link active" href="/profile">個人數據 <span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link" href="/eat">飲食列表</a>
            <a class="nav-item nav-link" href="/bloodPressure">血壓歷史</a>
            <a class="nav-item nav-link" href="/line/logout">Log out</a>
        </div>
    </div>
</nav>
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <figure class="figure">
                        <img src="<%- photo %>" class="figure-img img-fluid rounded" alt="A generic square placeholder image with rounded corners in a figure.">
                    </figure>
                </div>
                <div class="col-sm-9">
                    <% if(height) {%>
                        <h4 style="font-family:Microsoft JhengHei;">身高:<%- height %>cm</h4>
                        <div class="progress">
                            <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" role="progressbar" style="width: calc((<%- height %>/272) * 100%)" aria-valuenow="<%- height %>" aria-valuemin="0" aria-valuemax="272"></div>
                        </div>
                    <%} else {%>
                        <h4 style="font-family:Microsoft JhengHei;">身高:尚未紀錄</h4>
                        <div class="progress">
                            <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="272"></div>
                        </div>
                    <% } %>
                    <% if(newBD) { %>
                        <h4 style="font-family:Microsoft JhengHei;">體重:<%- newBD.Weight %>kg</h4>
                        <div class="progress">
                            <div class="progress-bar bg-danger progress-bar-striped progress-bar-animated" role="progressbar" style="width: calc((<%- newBD.Weight %>/180) * 100%)"aria-valuenow="<%- newBD.Weight %>" aria-valuemin="0" aria-valuemax="180"></div>
                        </div>
                        <% if (newBD.Fat != 9999) {%>
                            <h4 style="font-family:Microsoft JhengHei;">體脂肪:<%- newBD.Fat %>% (<%- (newBD.Weight * newBD.Fat / 100).toFixed(2) %>)</h4>
                            <div class="progress">
                                <div class="progress-bar bg-info progress-bar-striped progress-bar-animated" role="progressbar" style="width: calc((<%- newBD.Fat %>/100) * 100%)"aria-valuenow="<%- newBD.Fat %>" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        <% } else {%>
                            <h4 style="font-family:Microsoft JhengHei;">體脂肪: 尚未紀錄</h4>
                            <div class="progress">
                                <div class="progress-bar bg-info progress-bar-striped progress-bar-animated" role="progressbar" style="width: 100%"aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        <% } %>
                        <% if (newBD.Muscle != 9999) {%>
                            <h4 style="font-family:Microsoft JhengHei;">肌肉量:<%- newBD.Muscle %>% (<%- (newBD.Weight * newBD.Muscle / 100).toFixed(2) %>)</h4>
                            <div class="progress">
                                <div class="progress-bar bg-warning progress-bar-striped progress-bar-animated" role="progressbar" style="width: calc((<%- newBD.Muscle %>/100) * 100%)"aria-valuenow="<%- newBD.Muscle %>" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        <% } else {%>
                            <h4 style="font-family:Microsoft JhengHei;">肌肉量: 尚未紀錄</h4>
                            <div class="progress">
                                <div class="progress-bar bg-warning progress-bar-striped progress-bar-animated" role="progressbar" style="width: 100%"aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        <% } %>
                    <% } else { %>
                        <h4 style="font-family:Microsoft JhengHei;">體重:尚未紀錄</h4>
                        <div class="progress">
                            <div class="progress-bar bg-danger progress-bar-striped progress-bar-animated" role="progressbar" style="width: 100%"aria-valuenow="100" aria-valuemin="0" aria-valuemax="180"></div>
                        </div>
                        <h4 style="font-family:Microsoft JhengHei;">體脂肪: 尚未紀錄</h4>
                        <div class="progress">
                            <div class="progress-bar bg-info progress-bar-striped progress-bar-animated" role="progressbar" style="width: 100%"aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <h4 style="font-family:Microsoft JhengHei;">肌肉量: 尚未紀錄</h4>
                        <div class="progress">
                            <div class="progress-bar bg-warning progress-bar-striped progress-bar-animated" role="progressbar" style="width: 100%"aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    <% } %>
                    
                </div>
                <div class="col-12 col-sm-12" >
                    <canvas id="myChart" width="100%" height="100"></canvas>
                    <canvas id="myChart2" width="100%" height="100"></canvas>
                    <canvas id="myChart3" width="100%" height="100"></canvas>
                </div>
            </div>
        </div>
        <script src="/javascripts/profile.js"></script>
    </body>
</html>
